<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/usercard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_XSmall"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/cell_padding_horizontal">

            <LinearLayout
                android:id="@+id/lay_face"
                android:layout_width="@dimen/circle_image"
                android:layout_height="@dimen/circle_image"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/round_primary_24dp"
                android:gravity="center"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    card_view:srcCompat="@drawable/ic_face_white_24px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:background="@drawable/round_accent_16dp"
                android:gravity="center"
                card_view:layout_constraintBottom_toBottomOf="@+id/lay_face"
                card_view:layout_constraintRight_toRightOf="@+id/lay_face">

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_secondary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/lay_face">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_XSmall"
                    android:text="username"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_primary" />

            </LinearLayout>


            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="email@email.com"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_secondary"

                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/lay_name" />

            <TextView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:text="www.website.com"

                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_secondary"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/email" />

            <View
                android:id="@+id/divider_phone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/accent"
                android:layout_margin="@dimen/margin_Small"
                card_view:layout_constraintTop_toBottomOf="@id/website"
                />

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="@dimen/margin_Small"
                card_view:srcCompat="@drawable/ic_phone_white_24px"
                card_view:layout_constraintLeft_toLeftOf="@id/divider_phone"
                card_view:layout_constraintTop_toBottomOf="@id/divider_phone"
                android:tint="@color/primary_dark"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_XSmall"
                android:layout_marginTop="@dimen/margin_Small"

                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/divider_phone"

                android:text="phone"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_primary" />


            <View
                android:id="@+id/divider_address"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/accent"
                android:layout_margin="@dimen/margin_Small"
                card_view:layout_constraintTop_toBottomOf="@id/iv_phone"
                />
            <ImageView
                android:id="@+id/iv_place"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="@dimen/margin_Small"
                card_view:srcCompat="@drawable/ic_place_white_24px"
                card_view:layout_constraintLeft_toLeftOf="@id/divider_address"
                card_view:layout_constraintTop_toBottomOf="@id/divider_address"
                card_view:layout_constraintBottom_toTopOf="@+id/divider_compagny"
                android:tint="@color/primary_dark"/>

            <LinearLayout
                android:id="@+id/lay_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Small"
                android:orientation="vertical"

                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/divider_address"

                >
                <TextView
                    android:id="@+id/street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_primary"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/suite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="suite"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_secondary"/>
                <TextView
                    android:id="@+id/cityZip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45000-ORLEANS"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_secondary" />
            </LinearLayout>
            <View
                android:id="@+id/divider_compagny"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/margin_Small"
                android:background="@color/accent"
                card_view:layout_constraintTop_toBottomOf="@id/lay_address"
                />

            <ImageView
                android:id="@+id/iv_business"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="@dimen/margin_Small"
                card_view:srcCompat="@drawable/ic_business_white_24px"
                card_view:layout_constraintLeft_toLeftOf="@id/divider_compagny"
                card_view:layout_constraintTop_toBottomOf="@id/divider_compagny"

                card_view:layout_constraintBottom_toBottomOf="parent"
                android:tint="@color/primary_dark"/>

            <LinearLayout
                android:id="@+id/lay_compagny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Small"
                android:orientation="vertical"

                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/divider_compagny"

                >
                <TextView
                    android:id="@+id/compagny_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compagny"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_primary"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/catchphrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gotta Catch them all"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_secondary"/>
                <TextView
                    android:id="@+id/bs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IT Tech"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_secondary" />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>